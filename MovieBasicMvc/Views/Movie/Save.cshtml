@model SaveMovieViewModel

<div asp-validation-summary="All"
     class="alert alert-danger"></div>
<form asp-action="SaveMovie">
    <input asp-for="Id" hidden />
    <div class="mb-3">
        <label class="form-label">Film Adı</label>
        <input type="text"
               class="form-control" asp-for="Name">
    </div>
    <div class="mb-3">
        <label class="form-label">Film Resmi</label>
        <input type="text"
               class="form-control" asp-for="ImgUrl">
    </div>
    <div class="mb-3">
        <label class="form-label">Film Yıldızı</label>
        <input type="number"
               class="form-control" asp-for="StarRate">
    </div>
    <div class="mb-3">
        <label class="form-label">Film Kategorisi</label>
        <select class="form-control js-example-basic-multiple" asp-for="CategoryIds" multiple="multiple">
            @foreach (var cat in ViewBag.Categories)
            {
                <option value="@cat.Id">@cat.Name</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Filmi Kaydet</button>
</form>

@section Scripts{ 
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.js-example-basic-multiple').select2();
        });
    </script>
}
